{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Activate VS Build Tools (x64)",
			"type": "shell",
			"command": ". .\\activate_build_tools.ps -Arch x64",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Build (tests-only-debug)",
			"type": "shell",
			"command": "cmake --build --preset build-tests-only-debug",
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"dependsOn": [
				"Activate VS Build Tools (x64)"
			]
		}
	]
}